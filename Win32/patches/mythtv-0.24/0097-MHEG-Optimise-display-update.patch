@@ -709,6 +715,12 @@ void MHIContext::AddToDisplay(const QImage &image, int x, int y, bool bUnder /*=
     }
 }
 
+inline int Roundup(int n, int r)
+{
+    // NB assumes 2's complement arithmetic
+    return n + (-n & (r - 1));
+}
