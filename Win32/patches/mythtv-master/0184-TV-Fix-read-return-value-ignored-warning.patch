@@ -1334,7 +1334,8 @@ bool MpegRecorder::StartEncoding(void)
             // does not reliably start the data flow.  A read() seems
             // to consistently work, though.
             uint8_t dummy;
-            read(readfd, &dummy, 0);
+            ssize_t tmp = read(readfd, &dummy, 0);
+            (void)tmp;
         }
 
         LOG(VB_RECORD, LOG_INFO, LOC + "Encoding started");
