 {
     NAMThread &m = manager();
 
@@ -923,11 +924,11 @@ QDateTime NAMThread::GetLastModified(const QString &url)
     if (!cache)
         return QDateTime(); // Invalid
 
-    QNetworkCacheMetaData meta = cache->metaData(QUrl(url));
