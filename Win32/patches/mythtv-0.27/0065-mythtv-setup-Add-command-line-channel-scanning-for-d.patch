+                    start["modulation"] = ft->modulation.toString();
+                    start["frequency"]  = QString::number(ft->frequencyStart);
+                    start["inversion"]  = ft->inversion.toString();
+                    start["symbolrate"] = QString::number(ft->symbol_rate);
